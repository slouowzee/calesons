{
  "expo": {
    "name": "calesons",
    "slug": "calesons",
    "version": "1.0.0",
    "scheme": "calesons",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.slouowze.calesons",
      "infoPlist": {
        "NSCameraUsageDescription": "L'application a besoin d'accéder à la caméra pour scanner des codes QR."
      }
    },
    "android": {
      "package": "com.slouowze.calesons",
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-vision-camera",
        {
          "enableCodeScanner": true
        }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": [
            "Camera"
          ]
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
